<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/bg_border_line"
    android:orientation="vertical"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Customer Name"
            android:textColor="@color/gplus_color_4"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:text="Location"
            android:textColor="@color/text_color"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:text="Date"
            android:textColor="@color/text_color_grey" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_complaint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Complaint"
        android:textColor="@color/text_color" />



        <TextView
            android:id="@+id/tv_assigned_engineer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assigned engineer"
            android:layout_margin="5dp"
            android:textColor="@color/text_color"
            android:visibility="visible" />
        <TextView
            android:id="@+id/tv_dealer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dealer"
            android:layout_margin="5dp"
            android:textColor="@color/text_color"
            android:visibility="visible" />




    <TextView
        android:id="@+id/tv_spare_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="@drawable/bg_border_orange_line"
        android:gravity="center"
        android:padding="10dp"
        android:visibility="gone"
        android:text="Spare Request"
        android:textColor="@color/text_color" />
    <TextView
        android:id="@+id/tv_escalate_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:background="@drawable/bg_border_orange_line"
        android:gravity="center"
        android:padding="10dp"
        android:text="Escalate Request"
        android:textColor="@color/text_color" />
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="@drawable/bg_border_orange_line"
        android:gravity="center"
        android:padding="10dp"
        android:text="Status"
        android:textColor="@color/text_color" />
</LinearLayout>