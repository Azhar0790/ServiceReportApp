<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_border_line"
    android:orientation="vertical"
    android:alpha="0.7"
    android:layout_margin="5dp"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/photo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_model_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Model No"
                android:textSize="18sp"
                android:textColor="@color/gplus_color_4"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Product Name"
                android:textSize="@dimen/text_size"
                android:textColor="@color/text_color" />

            <TextView
                android:id="@+id/tv_complaint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="@dimen/text_size"
                android:maxLines="2"
                android:textColor="@color/text_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_assigned_engineer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="@dimen/text_size"
                android:text="Engineer Name"
                android:textColor="@color/text_color" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="@dimen/text_size"
                android:text="Date"
                android:textColor="@color/text_color_grey" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_escalate_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_border_red"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="Click here to fill escalate form"
        android:textColor="@color/text_color" />
    <TextView
        android:id="@+id/tv_complaint_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_border_red"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="Click here to view complaint status"
        android:textColor="@color/text_color" />

</LinearLayout>